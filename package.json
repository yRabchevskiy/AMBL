{
  "name": "ambl",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k \"ng serve\" \"wait-on http://localhost:4200 && nodemon\"",
    "build": "ng build --base-href ./",
    "electron-build": "tsc -p tsconfig.electron.json",
    "preclean": "taskkill /F /IM \"AMBL Desktop.exe\" /T || exit 0",
    "dist": "npm run preclean && rimraf release && npm run build && npm run electron-build && electron-builder"
  },
  "build": {
    "appId": "com.ambl.app",
    "productName": "AMBL Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "migrations.js",
      "ipc/**/*.js",
      "models/**/*.js",
      "splash.html",
      "resources/bin/${platform}/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/${platform}",
        "to": "bin/${platform}",
        "filter": [
          "mongod*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.5.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@ngrx/effects": "^21.0.1",
    "@ngrx/entity": "^21.0.1",
    "@ngrx/store": "^21.0.1",
    "@ngrx/store-devtools": "^21.0.1",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "electron-log": "^5.4.3",
    "fs-extra": "^11.3.3",
    "mongodb": "^7.1.0",
    "mongoose": "^9.2.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^25.3.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "jsdom": "^27.1.0",
    "nodemon": "^3.1.14",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.4"
  }
}
